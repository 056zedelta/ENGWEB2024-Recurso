doctype html
html
  head
    title Detalhes do Autor
    link(rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css")
  body
    header(class="w3-container w3-teal")
      h1 Detalhes do Autor #{id} : #{author}
    div(class="w3-container")
      table(class="w3-table-all w3-hoverable")
        thead
          tr(class="w3-light-grey")
            th Título
            th Série
            th Rating
        tbody
          each livro in livros
            tr
              td #{livro.title}
              td #{livro.series}
              td #{livro.rating}
      p Somatório Total de Livros: #{somatorio}
      a(href="/", class="w3-button w3-teal") Voltar à página principal
    footer.w3-container.w3-teal
      address Gerado por EngWeb2024 em #{data}
